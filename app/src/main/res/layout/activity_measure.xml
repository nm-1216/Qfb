<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/sc_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/tl_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/table_header"
                    android:text="测点号" />

                <TextView
                    style="@style/table_header"
                    android:text="控制方向" />

                <TextView
                    style="@style/table_header"
                    android:layout_span="4"
                    android:text="测量数据" />

                <TextView
                    style="@style/table_header"
                    android:layout_span="3"
                    android:text="测点图/截面" />
            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/table_header"
                    android:text="Point No." />

                <TextView
                    style="@style/table_header"
                    android:text="Direct." />

                <TextView
                    style="@style/table_header"
                    android:text="1" />

                <TextView
                    style="@style/table_header"
                    android:text="2" />

                <TextView
                    style="@style/table_header"
                    android:text="3" />

                <TextView
                    style="@style/table_header"
                    android:text="4" />

                <TextView
                    style="@style/table_header"
                    android:layout_span="3"
                    android:text="Measurement Point Drawing/Section" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/ll_btns"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_previous_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上一页" />

            <Button
                android:id="@+id/btn_next_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下一页" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_page_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ll_btns"
            android:layout_toLeftOf="@id/ll_btns"
            android:gravity="center"
            android:text="页码 Page No. 17 of 34"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>